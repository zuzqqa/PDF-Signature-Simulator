<Window x:Class="RSAKeyGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSAKeyGenerator"
        mc:Ignorable="d"
        Title="RSAKeyGenerator" Height="400" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter PIN:" FontSize="24" Margin="0,0,0,5" FontFamily="Arial"/>
            <PasswordBox x:Name="PinBox" FontSize="22" Margin="0,0,0,10" FontFamily="Arial"/>
            <Button x:Name="GenerateKeysButton" Content="Generate Keys" Click="GenerateKeys_Click" FontSize="24" Height="124" Background="#FF7358FB" BorderBrush="#FF5B5C8C" Foreground="White" FontFamily="Arial"/>
            <TextBlock x:Name="StatusText" FontSize="14" Margin="0,20,0,0" Foreground="Green"/>
        </StackPanel>
    </Grid>
</Window>
